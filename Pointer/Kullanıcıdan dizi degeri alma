#include <stdio.h>

int main()
{
	int dizi[100];
	int n,*ptr,i ;
	ptr=dizi;
	
	
	printf("Dizi kac elemanli olsun");
	scanf("%d", &n);
	printf("Lutfen elemanlari giriniz");
	for(i=0;i<n;i++)
	{
		scanf("%d",ptr);
		ptr++;
		
	}
	ptr=dizi;
	printf("Degerlerim=\n");
	for(i=0;i<n;i++)
	{
		printf("%d\n",*ptr);
		ptr++;
		
	}
	
	return 0 ;
}
